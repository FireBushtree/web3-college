{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Backend",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/app.js",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "restart": true,
      "runtimeArgs": ["--inspect"],
      "skipFiles": ["<node_internals>/**"],
      "outputCapture": "std"
    },
    {
      "name": "Debug Backend (nodemon)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/nodemon",
      "args": ["app.js"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "restart": true,
      "runtimeArgs": ["--inspect"],
      "skipFiles": ["<node_internals>/**"],
      "outputCapture": "std"
    }
  ]
}